<Window x:Class="Pi_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pi_"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="550" Margin="0,-100,0,0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="button" Content="Add Plane" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click"/>
        <Button x:Name="button2" Content="Add Pilot" HorizontalAlignment="Left" Margin="200,30,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click2"/>
        <Button x:Name="button3" Content="Add Hangar" HorizontalAlignment="Left" Margin="350,115,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click3"/>
        <Button x:Name="button4" Content="Login" HorizontalAlignment="Left" Margin="350,30,20,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click4"/>

    </Grid>
</Window>
