<Window x:Class="Pi_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pi_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="720" Margin="0,-100,0,0">
    <Grid>
        <Image Source="Properties/Menu.jpeg" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <Button x:Name="button" Foreground ="White" Background="Transparent" Content="Add Plane" HorizontalAlignment="Left" Margin="70,100,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click"/>
        <Button x:Name="button2" Foreground ="White" Background="Transparent" Content="Add Pilot" HorizontalAlignment="Left" Margin="70,150,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click2"/>
        <Button x:Name="button3" Foreground ="White" Background="Transparent" Content="Add Hangar" HorizontalAlignment="Left" Margin="70,200,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click3"/>
        <Button x:Name="button4" Foreground ="White" Background="Transparent" Content="Login" HorizontalAlignment="Left" Margin="70,250,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="button_Click4"/>

    </Grid>
</Window>
