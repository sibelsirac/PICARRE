<Window x:Class="Pi_.Connection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pi_"
        mc:Ignorable="d"
        Title="Connect" Height="450" Width="720" Margin="0,-100,0,0">

    <Grid>
        <Image Source="Properties/fond.jpeg" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <Button x:Name="button" Foreground ="White" Background="Transparent" Content="Login" HorizontalAlignment="Left" Margin="320,100,0,0" VerticalAlignment="Top" Height="25" Width="75" Click="button_Click"/>
        <TextBox x:Name="boxName" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100" Margin="200,75,0,0"/>
        <TextBlock x:Name="textName" HorizontalAlignment="Left" Margin="150,80,0,0" TextWrapping="Wrap" Text="Name" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="textPass" HorizontalAlignment="Left" Margin="140,125,0,0" TextWrapping="Wrap" Text="Password" Foreground="White" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pass" TextInput="pass_TextInput" HorizontalAlignment="Left" Margin="200,120,0,0" Height="25" Width="100" PasswordChar="*"  VerticalAlignment="Top"/>
    </Grid>
</Window>
